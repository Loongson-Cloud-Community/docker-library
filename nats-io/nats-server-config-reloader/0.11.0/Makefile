# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=nats-io
REPOSITORY	?=nats-server-config-reloader
TAG		?=0.11.0
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/nats-io/nack.git
default: image

src:
	git clone -b v${TAG} ${SOURCE_URL}
	cd nack && git apply ../support-for-loongarch.patch

image: src
	cd nack && make nats-server-config-reloader-docker ver=${TAG} drepo=$(REGISTRY)/$(ORGANIZATION) 
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf nack
