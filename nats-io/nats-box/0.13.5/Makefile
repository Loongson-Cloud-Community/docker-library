# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=nats-io
REPOSITORY	?=nats-box
TAG		?=0.13.5
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/nats-io/nats-box

default: image

src:
	git clone -b v${TAG} ${SOURCE_URL}
	cd ${REPOSITORY} && git apply ../support-for-loongarch.patch 	

image: src
	cd ${REPOSITORY} && make dockerx ver=${TAG} drepo=$(REGISTRY)/$(ORGANIZATION)   
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi
clean:
	rm -rf ${REPOSITORY}
