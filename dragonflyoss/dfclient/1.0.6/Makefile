# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=dragonflyoss
REPOSITORY	?=dfclient
TAG		?=1.0.6
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/dragonflyoss/Dragonfly.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')
PATCH=0001-port-to-loong64.patch
default: image

image: src/$(SOURCE)
	GOPROXY="https://goproxy.cn,direct" \
        DF_VERSION=$(TAG) $(MAKE) -C src/$(SOURCE) docker-build-client

src/$(SOURCE):
	git clone -q -b v$(TAG) --depth=1 $(SOURCE_URL) $@
	cd $@ && \
                git apply ../../$(PATCH)

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src
