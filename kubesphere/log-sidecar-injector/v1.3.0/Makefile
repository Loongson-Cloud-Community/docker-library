TAG?=v1.3.0
LATEST?=flase

GO_IMG?=lcr.loongnix.cn/library/golang:1.24
GOPROXY?=https://goproxy.cn,https://mirrors.aliyun.com/goproxy/,https://goproxy.io,direct

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

SOURCE_URL=https://github.com/kubesphere/logsidecar-injector.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')
PATCH=0001-logsidecar-injector-add-loong64.patch

default: image

src/$(SOURCE):
	git clone -b $(TAG) --depth=1 $(SOURCE_URL) $@
	cd $@ && \
		git apply ../../$(PATCH)

image: src/$(SOURCE)
	REGISTRY=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY) \
	ARCH=loong64 GO_PROXY=$(GOPROXY) TAG=$(TAG) \
	EXTRA_DOCKER_BUILD_ARGS="--build-arg http_proxy=$(http_proxy) --build-arg https_proxy=$(https_proxy)" \
	EXTRA_DOCKER_RUN_ARGS="-e http_proxy=$(http_proxy) -e https_proxy=$(https_proxy)" \
	GO_IMG=$(GO_IMG) \
		make -C src/$(SOURCE) docker-build

push:
	docker push $(IMAGE)
	@if [ $(LATEST) = "true" ]; \
		then\
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src
