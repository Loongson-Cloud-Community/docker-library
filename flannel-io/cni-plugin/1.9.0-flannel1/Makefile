# This file is generated by the template.

REGISTRY?=lcr.loongnix.cn
ORGANIZATION?=flannel
REPOSITORY?=flannel-cni-plugin
TAG?=v1.9.0-flannel1
LATEST?=false

GO_IMG?=lcr.loongnix.cn/library/golang:1.25
GOPROXY?=https://goproxy.cn,https://mirrors.aliyun.com/goproxy/,https://goproxy.io,direct
GOFLAGS=-buildvcs=false
IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

SOURCE_URL=https://github.com/flannel-io/cni-plugin.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')

default: image

src/$(SOURCE):
	git clone -b $(TAG) --depth=1 $(SOURCE_URL) $@

build: src/$(SOURCE)
	docker run --rm \
		-e GOARCH=loong64 \
		-e GOPROXY=$(GOPROXY) \
		-e GOFLAGS=$(GOFLAGS) \
		-v `pwd`/src/$(SOURCE):/v -w /v \
		$(GO_IMG) ./scripts/build_flannel.sh

image: src/$(SOURCE) build
	cp src/$(SOURCE)/dist/flannel-loong64 flannel-loong64 
	docker build --build-arg BASE_IMG=lcr.loongnix.cn/library/alpine:3.23 \
		-f Dockerfile \
		-t $(IMAGE) .

push:
	docker push $(IMAGE)
	@if [ $(LATEST) = "true" ]; \
		then\
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src
