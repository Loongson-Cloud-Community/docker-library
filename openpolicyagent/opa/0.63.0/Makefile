REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=openpolicyagent
REPOSITORY	?=opa
TAG		?=0.63.0
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image

image:
	wget https://dl-cdn.openeuler.openatom.cn/openEuler-24.03-LTS-SP3/docker_img/loongarch64/openEuler-docker.loongarch64.tar.xz
	docker load -i openEuler-docker.loongarch64.tar.xz
	docker build \
		--build-arg http_proxy=$(http_proxy) \
		--build-arg https_proxy=$(https_proxy) \
		-t $(IMAGE) \
		.
	rm -rf openEuler-docker.loongarch64.tar.xz
push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi
