# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=victoriametrics
REPOSITORY	?=victoria-metrics
TAG		?= 1.122.11
LATEST		?= false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest


SOURCE_URL=https://github.com/VictoriaMetrics/VictoriaMetrics.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')
PATCH=0001-support-loong64.patch

GO_IMG?=$(REGISTRY)/library/golang:1.25

default: image

src/$(SOURCE):
	git clone -b v$(TAG) --depth=1 $(SOURCE_URL) $@
	cd $@ && \
		git apply ../../$(PATCH)

image: src/$(SOURCE)
	make -C src/$(SOURCE) APP_NAME=$(REPOSITORY) \
		DOCKER_OPTS="--env CGO_ENABLED=0 --env https_proxy=$(https_proxy) --env http_proxy=$(http_proxy)" \
		BUILDER_IMAGE=$(GO_IMG) \
		ROOT_IMAGE=$(REGISTRY)/library/alpine:3.23 \
		CERTS_IMAGE=$(REGISTRY)/library/alpine:3.23 \
		DOCKER_NAMESPACE=$(REGISTRY)/$(ORGANIZATION) \
		PKG_TAG=$(TAG) \
		package-victoria-metrics-loong64

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src
