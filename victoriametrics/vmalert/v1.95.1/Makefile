# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=victoriametrics
REPOSITORY	?=vmalert
TAG		?=v1.95.1
LATEST		?=true

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

default: image

image:
	test -d src || git clone --depth=1 --branch $(TAG) https://github.com/Loongson-Cloud-Community/VictoriaMetrics.git src
	pushd src && git apply ../0001-vmagent-vmalert-add-lonng64-support.patch && popd
	make $(REPOSITORY)-linux-loong64-prod -C src
	APP_NAME=$(REPOSITORY) make publish-via-docker-loong64 -C src

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi
