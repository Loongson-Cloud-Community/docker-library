# This file is generated by the template.

REGISTRY ?= lcr.loongnix.cn
ORGANIZATION ?= kubernetes
REPOSITORY ?= etcd
TAG ?= 3.5.25

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)

SOURCE_URL =https://github.com/etcd-io/etcd.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')

GO_IMG ?= lcr.loongnix.cn/library/golang:1.24
GOPROXY=https://goproxy.cn,https://mirrors.aliyun.com/goproxy/,https://goproxy.io,direct

default: image

src/$(SOURCE):
	git clone --depth 1 -b v$(TAG) $(SOURCE_URL)  $@ && cd  $@ && git apply ../../*.patch

build:
	docker run --rm \
		-e GOARCH=loong64 \
		-e GOPROXY=$(GOPROXY) \
		-v `pwd`/src/$(SOURCE):/v -w /v \
		$(GO_IMG) make build GOARCH=loong64
	cp src/$(SOURCE)/bin/etcd* .

image: src/$(SOURCE) build
	docker build \
		-t $(IMAGE) \
		.

push:
	docker push $(IMAGE)
