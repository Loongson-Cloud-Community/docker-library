# This file is generated by the template.

REGISTRY?=cr.loongnix.cn
ORGANIZATION?=kubernetes
REPOSITORY?=kube-state-metrics
TAG?=2.17.0
LATEST?=false

GO_IMG?=lcr.loongnix.cn/library/golang:1.25

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(patsubst v%,%,$(TAG))
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest

SOURCE_URL=https://github.com/kubernetes/kube-state-metrics.git
SOURCE=$(shell echo $(SOURCE_URL) | awk -F '/' '{print $$NF}' | awk -F '.' '{print $$1}')

default: image

src/$(SOURCE):
	git clone -b v$(TAG) --depth=1 $(SOURCE_URL) $@

build: src/$(SOURCE)
	docker run --rm \
		-e GOARCH=loong64 \
		-e GOPROXY=$(GOPROXY) \
		-v `pwd`/src/$(SOURCE):/v -w /v \
		$(GO_IMG) make build-local

image: src/$(SOURCE) build
	cp src/$(SOURCE)/kube-state-metrics kube-state-metrics
	docker build --build-arg BASE_IMG=lcr.loongnix.cn/distroless/static-debian12:latest \
		-f Dockerfile \
		-t $(IMAGE) .

push:
	docker push $(IMAGE)
	@if [ $(LATEST) = "true" ]; then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf src