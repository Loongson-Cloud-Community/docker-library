# This file is generated by the template.

REGISTRY	?=lcr.loongnix.cn
ORGANIZATION	?=kekingcn
REPOSITORY	?=kkfileview
TAG		?=4.4.0
LATEST          ?=false

IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):$(TAG)
LATEST_IMAGE=$(REGISTRY)/$(ORGANIZATION)/$(REPOSITORY):latest
SOURCE_URL=https://github.com/kekingcn/kkFileView.git
PATCH=switch_office_preview_type.patch

default: image

.PHONY: src image push clean

src:  
	git clone --quiet -b v$(TAG) --single-branch $(SOURCE_URL)

image: src
	pushd kkFileView && \
	git apply ../switch_office_preview_type.patch && \
	docker build -t $(IMAGE) -f ../Dockerfile . && \
        popd

push:
	docker push $(IMAGE)
	#latest image
	@if [ $(LATEST) = "true" ]; \
		then \
		docker tag $(IMAGE) $(LATEST_IMAGE); \
		docker push $(LATEST_IMAGE); \
	fi

clean:
	rm -rf ./src
